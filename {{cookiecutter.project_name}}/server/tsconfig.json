{
    "compilerOptions": {
        "target": "es2021",
        "module": "commonjs",
        "esModuleInterop": true,
        "strict": true,
        "outDir": "./dist",
        "skipLibCheck": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "allowUnreachableCode": false
    },
    "include": ["./src/**/*.ts", "test/**/*.ts"]
}
